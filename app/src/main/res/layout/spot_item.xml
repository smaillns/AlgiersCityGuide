<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="@dimen/fragment_spot_list_recycler_item_size"
    android:minHeight="@dimen/fragment_spot_list_recycler_item_size"
    android:id="@+id/fragment_spot_list_item">

    <ImageView
        android:id="@+id/fragment_spot_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_spot_list_recycler_item_size"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_location_on_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_spot_list_recycler_item_panel_height"
        android:background="#88000000"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/global_spacing_xs"
        android:paddingRight="@dimen/global_spacing_xxs"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_spot_list_item_image"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/spot_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_mono_medium"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/spot_list_item_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="TextView"
            android:drawableLeft="@drawable/ic_directions_walk_black_24dp"
            android:textColor="#ffffff" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>